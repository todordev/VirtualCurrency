<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="title" type="text" class="input-xxlarge"
               label="COM_VIRTUALCURRENCY_TITLE"
               description="COM_VIRTUALCURRENCY_BADGE_TITLE_DESC"
               filter="trim"
               required="true"
                />

        <field name="website" type="text" class="input-xxlarge"
               label="COM_VIRTUALCURRENCY_WEBSITE"
               description="COM_VIRTUALCURRENCY_WEBSITE_DESC"
                />

        <field name="service_url" type="text" class="input-xxlarge"
               label="COM_VIRTUALCURRENCY_SERVICE_URL"
               description="COM_VIRTUALCURRENCY_SERVICE_URL_DESC"
                />

        <field name="note" type="textarea" class="input-xxlarge"
               label="COM_VIRTUALCURRENCY_NOTE"
               description="COM_VIRTUALCURRENCY_PARTNER_NOTE_DESC"
               filter="trim"
               rows="5"
                />

        <field name="published" type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               size="1"
               filter="int"
               default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="id" type="text" class="readonly"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               readonly="true"
               default="0"
                />

    </fieldset>
</form>